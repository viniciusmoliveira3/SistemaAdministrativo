@using Colex.ViewModel
@model List<ComponenteViewModels>

@section Styles{
    <link rel="stylesheet" href="/css/Componente/Index.css" />
    }


<div id="navegacao-div">
    <a id="novoComponente-btn" class="btn btn-success" href="/Componente/Cadastrar" role="button">Novo Componente</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <i class="fa-solid fa-house" data-toggle="tooltip" data-placement="top" title="Home"></i>
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </nav>
</div>
<h1 class="m-20 fs-35">Cadastrar componente</h1>
<div class="card" id="card-pesquisa">
    <h2>Pesquisar componente</h2>

    <div class="col-md-6">
        <input id="inputPesquisarComponente" type="text" class="form-control ml-15 mb-25 mt-15 fs-25 " placeholder="Digite o componente" aria-label="Digite o nome">
    </div>


</div>


<button id="btnPesquisarComponente" class="btn btn-primary" type="submit">Pesquisar</button>



<div class="card mt-50" id="card-tabela">
    <div class="card-block pt-2 pb-2 m-25" id="div-tabela">
        <table id="tabela-Index" class="table table-hover" data-totalPagina="@ViewBag.TotalPagina">
            <thead>
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Lote</th>
                    <th scope="col">Data</th>
                    <th scope="col">Situação</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ComponenteViewModels componente in ViewBag.Compoenente)
                {
                    <tr>
                        <td>@componente.Id</td>
                        <td>@componente.Nome</td>
                        <td>@componente.Quantidade</td>
                        <td>@componente.Lote</td>
                        <td>@componente.Data.ToString("dd/MM/yyyy")</td>
                        @if(componente.Ativo == true)
                        {
                            <td>Em uso</td>
                        }
                        else
                        {
                            <td>Não usado</td>

                        }
                        <td>
                            <a href="/componente/detalhe?id=@componente.Id">
                                <i class="fa-solid fa-circle-info fa-lg" data-toggle="tooltip" data-placement="top" title="Detalhe do componente"></i>
                            </a>
                            <a href="/componente/editar?id=@componente.Id">
                                <i class="fa-solid fa-gear fa-lg" data-toggle="tooltip" data-placement="top" title="Alterar componente"></i>
                            </a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
        <div id="paginacao">
            <a>
                <i id="seta-esquerda" class="fa-solid fa-arrow-left-long fa-lg"></i>
            </a>
            <a>
                <i id="seta-direita" class="fa-solid fa-arrow-right-long fa-lg"></i>
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Componente/ComponenteIndex.js"></script>

}
