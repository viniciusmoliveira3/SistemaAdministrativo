@using Colex.ViewModel;
@model ExtintorViewModels





@section Styles {
    <link rel="stylesheet" href="~/css/Extintor/Extintor.css" />
}

<div id="navegacao-div">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <i class="fa-solid fa-house" data-toggle="tooltip" data-placement="top" title="Home"></i>
                </a>
            </li>
            <li class="breadcrumb-item"><a href="~/Extintor/Index">Index</a></li>
            <li class="breadcrumb-item active" aria-current="page">Detalhe</li>
        </ol>
    </nav>
</div>
<h1>Detalhe extintor</h1>
<div class="card mt-50" id="card-tabela">
    <div id="container-tabela">
        <form class="row" asp-controller="Extintor" asp-action="Detalhe" method="get">

            <div class="col-md-2">
                <label asp-for="NumeroCilindro" class="form-label">Nº Cilindro</label>
                <input asp-for="NumeroCilindro" type="text" class="form-control"disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="AnoFabricacao" class="form-label">Ano de fabricação</label>
                <input asp-for="AnoFabricacao" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="IdMarcaExtintor" class="form-label">Marca do Extintor</label>
                <select asp-for="IdMarcaExtintor" class="form-select" disabled>
                    <option selected>Selecione</option>
                    @foreach (MarcaExtintorViewModels marca in ViewBag.MarcaExtintor)
                    {
                        <option value="@marca.Id">@marca.Nome</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="EnsaioHidrostatico" class="form-label">Ensaio Hidrostatico</label>
                <input asp-for="EnsaioHidrostatico" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="ProximoEnsaioHisdrostatico" class="form-label">Proximo Ensaio</label>
                <input asp-for="ProximoEnsaioHisdrostatico" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="NBR" class="form-label">NBR</label>
                <input asp-for="NBR" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="Projeto" class="form-label">Projeto</label>
                <input asp-for="Projeto" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="IdMateriaPrima" class="form-label">Matéria-prima</label>
                <select asp-for="IdMateriaPrima" class="form-select" disabled>
                    <option selected>Selecione</option>
                    @foreach (MateriaPrimaViewModels materia in ViewBag.MateriaPrima)
                    {
                        <option value="@materia.Id">@materia.Nome</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="NumPatrimonio" class="form-label">Nº do patrimônio.</label>
                <input asp-for="NumPatrimonio" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="CapacExtintora" class="form-label">Capacidade extintora</label>
                <input asp-for="CapacExtintora" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="IdCapacidade" class="form-label">Capacidade</label>
                <select asp-for="IdCapacidade" class="form-select" disabled>
                    <option selected>Selecione</option>
                    @foreach (CapacidadeViewModels capacidade in ViewBag.Capacidade)
                    {
                        <option value="@capacidade.Id">@capacidade.CapacidadeCarga</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="Lote" class="form-label">Lote</label>
                <input asp-for="Lote" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-3">
                <label asp-for="SeloAnterior" class="form-label">Selo anterior</label>
                <input asp-for="SeloAnterior" type="text" class="form-control" disabled>
            </div>
        </form>
    </div>  
</div>