@using Colex.ViewModel
@model List<FornecedorViewModels>

@section Styles{
    <link rel="stylesheet" href="/css/Fornecedor/Index.css" />
    }


<div id="navegacao-div">
    <a id="novoFornecedor-btn" class="btn btn-success" href="/Fornecedor/Cadastrar" role="button">Novo Fornecedor</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <i class="fa-solid fa-house" data-toggle="tooltip" data-placement="top" title="Home"></i>
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </nav>
</div>
<h1 class="m-20 fs-35">Cadastrar fornecedor</h1>
<div class="card" id="card-pesquisa">
    <h2>Pesquisar fornecedor</h2>

    <div class="col-md-6">
        <input id="inputPesquisarFornecedor" type="text" class="form-control ml-15 mb-25 mt-15 fs-25 " placeholder="Digite o fornecedor">
    </div>


</div>


<button id="btnPesquisarFornecedor" class="btn btn-primary" type="submit">Pesquisar</button>



<div class="card mt-50" id="card-tabela">
    <div class="card-block pt-2 pb-2 m-25" id="div-tabela">
        <table id="tabela-Index" class="table table-hover" data-totalPagina="@ViewBag.TotalPagina">
            <thead>
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">E-mail</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (FornecedorViewModels fornecedor in ViewBag.Fornecedor)
                {
                    <tr>
                        <td>@fornecedor.Id</td>
                        <td>@fornecedor.NomeFantasia</td>
                        <td>@fornecedor.Telefone</td>
                        <td>@fornecedor.Email</td>
                        <td>
                            <a href="/fornecedor/detalhe?id=@fornecedor.Id">
                                <i class="fa-solid fa-circle-info fa-lg" data-toggle="tooltip" data-placement="top" title="Detalhe do fornecedor"></i>
                            </a>
                            <a href="/fornecedor/editar?id=@fornecedor.Id">
                                <i class="fa-solid fa-gear fa-lg" data-toggle="tooltip" data-placement="top" title="Alterar fornecedor"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="paginacao">
            <a>
                <i id="seta-esquerda" class="fa-solid fa-arrow-left-long fa-lg"></i>
            </a>
            <a>
                <i id="seta-direita" class="fa-solid fa-arrow-right-long fa-lg"></i>
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Fornecedor/FornecedorIndex.js"></script>
}
