<div class="modal fade" id="etiquetasTemporaria" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Imprimir etiquetas tempoararias</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="dados-busca">
                    <form class="row" asp-controller="Etiquetas" asp-action="GerarEtiquetasTemporaria" method="get">
                        <div class="row">
                            <h4>Escolha o tipo, mês do vencimento, o próximo teste e o tipo de manutenção</h4>
                            <div class="col-md-2">
                                <label for="TipoCargaTempo" class="form-label">Matéria-prima</label>
                                <select id="TipoCargaTempo" class="form-select">
                                    <option value="0" selected>Matéria-prima</option>
                                    @foreach (Colex.ViewModel.MateriaPrimaViewModels materia in ViewBag.MateriaPrima)
                                    {
                                        <option value="@materia.Nome">@materia.Nome</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="mes" class="form-label">Mês</label>
                                <select id="mes" class="form-select">
                                    <option value="0" selected>mes</option>
                                    @foreach (var meses in ViewBag.Meses)
                                    {
                                        <option value="@meses">@meses</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="anoProximaManu" class="form-label">Ano da prox manut.</label>
                                <input id="anoProximaManu" type="text" class="form-control" placeholder="Digite o ano">
                            </div>
                            <div class="col-md-2">
                                <label for="dataEtiquetaTemporaria" class="form-label">Ano</label>
                                <input id="dataEtiquetaTemporaria" type="text" class="form-control" placeholder="Digite o ano">
                            </div>
                            <div class="col-md-1">
                                <label for="manutencao" class="form-label">Manutencao</label>
                                <input id="manutencao" type="text" class="form-control">
                            </div>
                            <div class="col-md-1">
                                <label for="qtd" class="form-label">Quantidade</label>
                                <input id="qtd" type="text" class="form-control">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button id="btnEtiquetasTem" type="button" class="btn btn-primary">Pesquisar</button>
            </div>
        </div>
    </div>
</div>
