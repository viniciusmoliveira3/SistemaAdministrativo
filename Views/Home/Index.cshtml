<div class="modal fade" id="RelatorioExtintorCliente" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen-sm-down">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Buscar extintiores por cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="dados-busca">
                    <form class="row" asp-controller="Relatorio" asp-action="RelatorioExtintorCliente" method="get">
                        <div class="row">
                            <h4>Digite o cliente</h4>
                            <div class="col-md-8">
                                <label for="clienteBusca" class="form-label">Cliente</label>
                                <input id="clienteBusca" type="text" class="form-control" placeholder="Digite o cliente">
                                <input type="hidden" id="IdCliente" />
                            </div>
                            <div class="col-md-4">
                                <label for="Data" class="form-label">Ano</label>
                                <input id="Data" type="number" class="form-control" placeholder="Digite o ano">

                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button id="btnRelatorioExtintorCliente" type="button" class="btn btn-primary">Pesquisar</button>
            </div>
        </div>
    </div>
</div>
