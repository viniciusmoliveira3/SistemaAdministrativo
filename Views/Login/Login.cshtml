@using Colex.ViewModel;
@model LoginViewModels

@section Styles{
    <link rel="stylesheet" href="/css/Login/login.css" />
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <img class="mb-4" src="/Img/colexLogo.jpg">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Entrar</h5>
                        <form asp-controller ="Login" asp-action="Login" method="post">
                            <div class="mb-3">
                                <label asp-for="Login">Login</label>
                                <input asp-for="Login" type="text" class="form-control" id="usuario" placeholder="Usuário">
                            </div>
                            <div class="mb-3">
                                <label asp-for="Senha">Senha</label>
                                <input asp-for="Senha" type="password" class="form-control" id="senha" placeholder="Senha">
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">
                                    Entrar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@if (TempData["Error-Login"] != null)
{
    <span id="notify" class="d-none" data-type="error">@TempData["Error-Login"]</span>
}

@section Scripts{
    <script src="~/js/Login/Login.js"></script>
}