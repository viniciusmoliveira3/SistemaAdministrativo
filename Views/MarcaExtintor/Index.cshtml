@using Colex.ViewModel
@model List<MarcaExtintorViewModels>

@section Styles{
    <link rel="stylesheet" href="/css/MarcaExtintor/Index.css" />
    }


<div id="navegacao-div">
    <a id="novoMarcaExtintor-btn" class="btn btn-success" href="/MarcaExtintor/Cadastrar" role="button">Nova marca de extintor</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <i class="fa-solid fa-house" data-toggle="tooltip" data-placement="top" title="Home"></i>
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </nav>
</div>
<h1 class="m-20 fs-35">Cadastrar marca extintor</h1>
<div class="card" id="card-pesquisa">
    <h2>Pesquisar marca extintor</h2>

    <div class="col-md-6">
        <input id="inputPesquisarMarcaExtintor" type="text" class="form-control ml-15 mb-25 mt-15 fs-25 " placeholder="Digite a marca">
    </div>


</div>


<button id="btnPesquisarMarcaExtintor" class="btn btn-primary" type="submit">Pesquisar</button>



<div class="card mt-50" id="card-tabela">
    <div class="card-block pt-2 pb-2 m-25" id="div-tabela">
        <table id="tabela-Index" class="table table-hover" data-totalPagina="@ViewBag.TotalPagina">
            <thead>
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (MarcaExtintorViewModels marca in ViewBag.MarcaExtintor)
                {
                    <tr>
                        <td>@marca.Id</td>
                        <td>@marca.Nome</td>
                        <td>
                            <a href="/marcaextintor/detalhe?id=@marca.Id">
                                <i class="fa-solid fa-circle-info fa-lg" data-toggle="tooltip" data-placement="top" title="Detalhe da marca de extintor"></i>
                            </a>
                            <a href="/marcaextintor/editar?id=@marca.Id">
                                <i class="fa-solid fa-gear fa-lg" data-toggle="tooltip" data-placement="top" title="Alterar marca de extintor"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="paginacao">
            <a>
                <i id="seta-esquerda" class="fa-solid fa-arrow-left-long fa-lg"></i>
            </a>
            <a>
                <i id="seta-direita" class="fa-solid fa-arrow-right-long fa-lg"></i>
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/MarcaExtintor/MarcaExtintorIndex.js"></script>
}
