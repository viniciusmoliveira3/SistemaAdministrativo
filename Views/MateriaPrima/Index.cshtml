@using Colex.ViewModel
@model List<MateriaPrimaViewModels>

@section Styles{
    <link rel="stylesheet" href="~/css/MateriaPrima/Index.css" />
    }


<div id="navegacao-div">
    <a id="novaMateria-btn" class="btn btn-success" href="/MateriaPrima/Cadastrar" role="button">Nova matéria prima</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <i class="fa-solid fa-house" data-toggle="tooltip" data-placement="top" title="Home"></i>
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </nav>
</div>
<h1 class="m-20 fs-35">Cadastrar matéria prima</h1>
<div class="card" id="card-pesquisa">
    <h2>Pesquisar matéria prima</h2>

    <div class="col-md-6">
        <input id="inputPesquisarMateria" type="text" class="form-control ml-15 mb-25 mt-15 fs-25 " placeholder="Digite a matéria prima">
    </div>


</div>


<button id="btnPesquisarMateria"  class="btn btn-primary" type="submit">Pesquisar</button>



<div class="card mt-50" id="card-tabela">
    <div class="card-block pt-2 pb-2 m-25" id="div-tabela">
        <table id="tabela-Index" class="table table-hover" data-totalPagina="@ViewBag.TotalPagina">
            <thead>
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Lote</th>
                    <th scope="col">Quantidade Atual</th>
                    <th scope="col">Data</th>
                    <th scope="col">Situação</th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (MateriaPrimaViewModels materia in ViewBag.MateriaPrima)
                {
                    <tr>
                        <td>@materia.Id</td>
                        <td>@materia.Nome</td>
                        <td>@materia.LoteInterno</td>
                        <td>@materia.QuantidadeAtual</td>
                        <td>@materia.Data.ToString("dd/MM/yyyy")</td>
                        @if(materia.Ativo == true)
                        {
                            <td>Em uso</td>
                        }
                        else
                        {
                            <td>Não usado</td>
                        }
                        <td>
                            <a href="/materiaprima/detalhe?id=@materia.Id">
                                <i class="bi bi-info-square-fill" style='font-size:23px;color:black' data-toggle="tooltip" data-placement="top" title="Detalhe da matéria prima"></i>
                            </a>
                            <a href="/materiaprima/editar?id=@materia.Id">
                                <i class="bi bi-gear-wide" style='font-size:23px;color:black' data-toggle="tooltip" data-placement="top" title="Alterar matéria prima"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="paginacao">
            <a>
                <i id="seta-esquerda" class="fa-solid fa-arrow-left-long fa-lg"></i>
            </a>
            <a>
                <i id="seta-direita" class="fa-solid fa-arrow-right-long fa-lg"></i>
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/MateriaPrima/MateriaPrimaIndex.js"></script>
}
