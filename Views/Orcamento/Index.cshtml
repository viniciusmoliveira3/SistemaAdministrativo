@using Colex.ViewModel
@using System.Globalization
@model List<OrcamentoViewModels>

@section Styles{
    <link rel="stylesheet" href="/css/Extintor/Index.css" />
    }
@{
    CultureInfo br = new CultureInfo("pt-BR");

}

<div id="navegacao-div">
    <a id="novocliente-btn" class="btn btn-success" href="/orcamento/Cadastrar" role="button">Novo orçamento</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <i class="fa-solid fa-house" data-toggle="tooltip" data-placement="top" title="Home"></i>
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </nav>
</div>
<h1 class="m-20 fs-35">Cadastrar orcamento</h1>
<div class="card " id="card-pesquisa">
    <h2>Pesquisar orçamento</h2>
    <div class="row">
        <div class="col-md-6">
            <input id="inputPesquisarOrcamento" type="text" class="form-control ml-15 mb-25 mt-15 fs-25 " placeholder="Digite o número">
        </div>
        <div class="col-md-6">
            <input id="inputPesquisarOrcamentoCliente" type="text" class="form-control ml-15 mb-25 mt-15 fs-25 " placeholder="Digite o cliente">
        </div>

    </div>
   
</div>


<button id="btnPesquisarOrcamento" class="btn btn-primary" type="submit">Pesquisar</button>



<div class="card mt-50" id="card-tabela">
    <div class="card-block pt-2 pb-2 m-25" id="div-tabela">
        <table id="tabela-Index" class="table table-hover" data-totalPagina="@ViewBag.TotalPagina">
            <thead>
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Valor</th>
                    <th></th>
                </tr>
            </thead>
            <tbody >
                @foreach (OrcamentoViewModels orcamento in ViewBag.Orcamento)
                {
                    <tr>
                        <td>@orcamento.IdOrcamento</td>
                        <td>@orcamento.Cliente</td>
                        <td>@orcamento.Telefone</td>
                        <td>@orcamento.ValorFinal.ToString("C", br)</td>
                        <td>
                            <a href="/orcamento/orcamentopdf?idOrcamento=@orcamento.IdOrcamento">
                                <i class="bi bi-file-earmark-binary-fill" style="font-size:25px; color:black" data-toggle="tooltip" data-placement="top" title="Orcamento"></i>
                            </a>
                            <a href="/orcamento/editar?idOrcamento=@orcamento.IdOrcamento">
                                <i class="bi bi-arrow-counterclockwise" style="font-size:25px; color:black" data-toggle="tooltip" data-placement="top" title="Alterar orcamento"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div id="paginacao">

            <a>
                <i id="seta-esquerda" class="fa-solid fa-arrow-left-long fa-lg"></i>
            </a>
            <a>
                <i id="seta-direita" class="fa-solid fa-arrow-right-long fa-lg"></i>
            </a>

        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/Orcamento/Index.js"></script>
}