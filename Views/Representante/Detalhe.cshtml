@using Colex.ViewModel;
@model RepresentanteViewModels





@section Styles {
    <link rel="stylesheet" href="/css/Representante/Representante.css"/>
}

<div id="navegacao-div">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <i class="fa-solid fa-house" data-toggle="tooltip" data-placement="top" title="Home"></i>
                </a>
            </li>
            <li class="breadcrumb-item"><a href="~/Representante/Index">Index</a></li>
            <li class="breadcrumb-item active" aria-current="page">Detalhe</li>
        </ol>
    </nav>
</div>
<h1>Detalhar representante</h1>
<div class="card mt-50" id="card-tabela">
    <div id="container-tabela">
        <form class="row" asp-controller="Representante" asp-action="detalhe" method="get">

            <div class="col-md-3">
                <label asp-for="NomeFantasia" class="form-label">Nome Fantasia</label>
                <input asp-for="NomeFantasia" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-3">
                <label asp-for="RazaoSocial" class="form-label">Razão Social</label>
                <input asp-for="RazaoSocial" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="CEP" class="form-label">CEP</label>
                <input asp-for="CEP" type="text" class="form-control" placeholder="00000-00" disabled>
            </div>
            <div class="col-md-4">
                <label asp-for="EnderecoSocial" class="form-label">Endereço Social</label>
                <input asp-for="EnderecoSocial" type="text" class="form-control" placeholder="Rua, Número e Bairro" disabled>
            </div>
            <div class="col-md-3">
                <label asp-for="Bairro" class="form-label">Bairro</label>
                <input asp-for="Bairro" type="text" class="form-control" placeholder="Bairro" disabled>
            </div>
            <div class="col-md-4">
                <label asp-for="Cidade" class="form-label">Cidade</label>
                <input asp-for="Cidade" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-1">
                <label asp-for="Numero" class="form-label">Número</label>
                <input asp-for="Numero" type="text" class="form-control" placeholder="Númeo" disabled>
            </div>
            <div class="col-md-1">
                <label asp-for="Uf" class="form-label">UF</label>
                <input asp-for="Uf" type="text" class="form-control" disabled>
            </div>
            <div class="col-md-3">
                <label asp-for="CNPJ" class="form-label">CNPJ</label>
                <input asp-for="CNPJ" type="text" class="form-control" placeholder="00.000.000/0000-00" maxlength="14" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="InscricaoEstadual" class="form-label">Inscrição Social</label>
                <input asp-for="InscricaoEstadual" type="text" class="form-control" placeholder="000.000.000.000" disabled>
            </div>
            <div class="col-md-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Digite um email válido" disabled>
            </div>
            <div class="col-md-2">
                <label asp-for="Telefone" class="form-label">Telefone</label>
                <input asp-for="Telefone" type="text" class="form-control" placeholder="(00)90000-0000" disabled>
            </div>
        </form>
    </div>
</div>