@using Colex.ViewModel
@model List<RepresentanteViewModels>

@section Styles{
    <link rel="stylesheet" href="/css/Representante/Index.css" />
    }


<div id="navegacao-div">
    <a id="novoRepresentante-btn" class="btn btn-success" href="/Representante/Cadastrar" role="button">Novo Representante</a>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <i class="fa-solid fa-house" data-toggle="tooltip" data-placement="top" title="Home"></i>
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </nav>
</div>
<h1 class="m-20 fs-35">Cadastrar representante</h1>
<div class="card" id="card-pesquisa">
    <h2>Pesquisar representante</h2>

    <div class="col-md-6">
        <input id="inputPesquisarRepresentante"  type="text" class="form-control ml-15 mb-25 mt-15 fs-25 " placeholder="Digite o representante">
    </div>


</div>


<button id="btnPesquisarRepresentante" class="btn btn-primary" type="submit">Pesquisar</button>



<div class="card mt-50" id="card-tabela">
    <div class="card-block pt-2 pb-2 m-25" id="div-tabela">
        <table id="tabela-Index" class="table table-hover" data-totalPagina="@ViewBag.TotalPagina">
            <thead>
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">E-mail</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (RepresentanteViewModels representante in ViewBag.Representante)
                {
                    <tr>
                        <td>@representante.Id</td>
                        <td>@representante.NomeFantasia</td>
                        <td>@representante.Telefone</td>
                        <td>@representante.Email</td>
                        <td>
                            <a href="/representante/detalhe?id=@representante.Id">
                                <i class="fa-solid fa-circle-info fa-lg" data-toggle="tooltip" data-placement="top" title="Detalhe do representante"></i>
                            </a>
                            <a href="/representante/editar?id=@representante.Id">
                                <i class="fa-solid fa-gear fa-lg" data-toggle="tooltip" data-placement="top" title="Alterar representante"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="paginacao">
            <a>
                <i id="seta-esquerda" class="fa-solid fa-arrow-left-long fa-lg"></i>
            </a>
            <a>
                <i id="seta-direita" class="fa-solid fa-arrow-right-long fa-lg"></i>
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Representante/RepresentanteIndex.js"></script>

}
