@using Colex.ViewModel;
@model UsuarioViewModels





@section Styles {
    <link rel="stylesheet" href="/css/Cliente/Cliente.css" />
}

<div id="navegacao-div">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <i class="fa-solid fa-house" data-toggle="tooltip" data-placement="top" title="Home"></i>
                </a>
            </li>
            <li class="breadcrumb-item"><a href="~/Usuario/Index">Index</a></li>
            <li class="breadcrumb-item active" aria-current="page">Detalhe</li>
        </ol>
    </nav>
</div>

<h1>Detalhe usuário</h1>
<div class="card mt-50" id="card-tabela">
    <div id="container-tabela">
        <form class="row" asp-controller="Usuario" asp-action="Cadastrar" method="post">

            <div class="col-md-4">
                <label asp-for="Nome" class="form-label">Nome do usuário</label>
                <input asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome" disabled>
            </div>
            <div class="col-md-4">
                <label asp-for="CPF" class="form-label">CPF</label>
                <input asp-for="CPF" type="text" class="form-control" placeholder="CPF" disabled>
            </div>
            <div class="col-md-4">
                <label asp-for="Login" class="form-label">Login</label>
                <input asp-for="Login" type="text" class="form-control" placeholder="Login" disabled>
            </div>
            <div class="col-md-4">
                <label asp-for="Senha" class="form-label">Senha</label>
                <input asp-for="Senha" type="password" class="form-control" placeholder="6 digitos" maxlength="6" disabled>
            </div>
            <div class="col-md-4">
                <label id="ConfirmarSenha" class="form-label">Confirma rSenha</label>
                <input id="ConfirmarSenha" type="password" class="form-control" placeholder="6 digitos" maxlength="6" disabled>
            </div>
        </form>
    </div>
</div>

@if (TempData["Success-Cliente"] != null)
{
    <span id="notify" class="d-none" data-type="success">@TempData["Success-Cliente"]</span>
}

@if (TempData["Error-Cliente"] != null)
{
    <span id="notify" class="d-none" data-type="error">@TempData["Error-Cliente"]</span>
}

@section Scripts{
    <script src="~/js/Cliente/Cliente.js"></script>
}